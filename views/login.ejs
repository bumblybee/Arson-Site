<%- include("partials/header") -%>
<div class="login-form-container container mx-auto w-75 d-flex flex-column p-4">
  <form class="login-form border rounded p-4" action="/login" method="POST">
    <div class="form-group">
      <input
        class="form-control text-dark"
        type="text"
        placeholder="Username"
        name="username"
      />
    </div>
    <div class="form-group">
      <input
        class="form-control text-dark"
        type="password"
        name="password"
        placeholder="Password"
      />
    </div>
    <button name="btn" class="btn btn-danger btn-block" value="news">
      News
    </button>
    <button name="btn" value="recipe" class="btn btn-danger btn-block">
      Recipe
    </button>
  </form>
</div>
