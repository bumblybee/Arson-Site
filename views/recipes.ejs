<%- include("partials/header") -%>
<div class="card-page-container">
  <h1 class="recipe-page-title text-center">Recipes</h1>
  <div class="container recipe-page-card-container">
    <% recipes.forEach(recipe => { %>
    <div class="container">
      <a href="/recipes/<%= recipe._id %>" class="card-link-wrapper">
      <div class="card border-0 recipe-page-card">
        <div class="card-img-container rounded-top" style="background-image:url('/img/<%= recipe.images[0].filename %>');">
        </div>

        <div class="recipe-page-card-body card-body p-3">
          <p class="card-category recipe-card-category">Recipe</p>
          <h3 class="mb-0 card-title">
            <%= recipe.title %>
          </h3>
          <div class="mb-1 text-muted card-text">
            <i class="far fa-clock pr-2"></i><%= recipe.date %>

            <small class="ml-1 font-weight-bold text-muted"><%= recipe.submittedBy %></small>
          </div>
          <!-- Add substring to recipes after creating full recipe route -->
          <p class="card-text mt-3 mb-0">"<%= recipe.comment %>"</p>
        </div>
        <!-- <div
          class="card-footer border-0 recipe-page-social-icons"
          style="background: hsl(7, 54%, 50%);"
        >
          <p class="copy-msg">Link Copied!</p>
          <i
            class="fas fa-link p-1 ml-2 copy-link float-right"
            data-placement="top"
            title="Copy Link"
          ></i>

          <i
            class="fas fa-thumbs-up p-1 float-right"
            data-placement="top"
            title="like"
          ></i>
        </div> -->
      </div>
      </a>
    </div>

    <% }) %>
  </div>
</div>



</body>
</html>
