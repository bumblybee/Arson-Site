<%- include("partials/header") -%>
<div class="card-page-container">
  <h1 class="recipe-page-title text-center">Recipes</h1>
  <div class="container recipe-page-card-container">
    <% recipes.forEach(recipe => { %>
    <div class="container">
      <a href="/recipes/<%= recipe._id %>" class="card-link-wrapper">
      <div class="card recipe-page-card">
       
        <div class="card-img-container" style="background-image:url('/img/<%= recipe.images[0].filename %>');">
        </div>

        <div class="recipe-page-card-body card-body p-3">
          <p class="card-category recipe-card-category">Recipe</p>
          <h3 class="mb-0 card-title">
            <%= recipe.title %>
          </h3>
          <div class="card-text mb-3">
            <i class="fa fa-clock text-muted"></i>
            <span class="card-date text-muted"><%= recipe.date %></span>

            <small class="ml-1 text-muted"><%= recipe.submittedBy %></small>
          </div>
        
          <p class="card-text mb-0">"<%= recipe.comment %>"</p>
        </div>
      </div>
      </a>
    </div>

    <% }) %>
  </div>
</div>



</body>
</html>
