<%- include("../partials/header", {auth}) -%>
<!-- TODO: Get rid of edit buttons and pass user/token to recipe and news pages, then render edit button within page if jwt/user -->

<div class="login-form-container container mx-auto w-75 d-flex flex-column p-4">
  <form class="login-form border rounded p-4" action="/login" method="POST">
    <div class="form-group">
      <input
        class="form-control text-dark"
        type="text"
        placeholder="Username"
        name="username"
      />
    </div>

    <div class="form-group">
      <input
        class="form-control text-dark"
        type="password"
        name="password"
        placeholder="Password"
      />
    </div>
    <div class="d-flex justify-content-between">
      <button name="btn" class="btn btn-danger w-50 mr-1" value="create-news">
        Create News
      </button>
      <button
        name="btn"
        class="btn btn-light border-dark w-50"
        value="edit-news"
      >
        Edit News
      </button>
    </div>

    <hr class="w-75 mx-auto" />

    <div class="d-flex justify-content-between mt-3">
      <button name="btn" value="create-recipe" class="btn btn-danger w-50 mr-1">
        Create Recipe
      </button>
      <button
        name="btn"
        value="edit-recipe"
        class="btn btn-light border-dark w-50"
      >
        Edit Recipe
      </button>
    </div>
    <button class="btn btn-block btn-danger mt-3">Log in</button>
  </form>
</div>
